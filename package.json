{
  "name": "express-typescript-backend",
  "version": "1.0.0",
  "description": "Backend project with Node.js, Express and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev:backend": "ts-node-dev --respawn src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:client": "cd frontend && npm run dev",
    "build": "cd frontend && npm install && npm run build && cd .. && tsc",
    "build:full": "npm install && cd frontend && npm install && npm run build && cd .. && npm run build",
    "seed": "ts-node src/scripts/seed.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed successfully!"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.21.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0",
    "wait-on": "^9.0.3"
  }
}