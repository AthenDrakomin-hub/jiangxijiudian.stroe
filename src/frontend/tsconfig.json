{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM"],
    "types": ["vite/client"],
    "noEmit": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}